<PropertyList>
    <filter>
        <type>gain</type>
        <gain>1</gain>
        <input>
            <condition>
                <equals>
                    <property>/velocities/vBody-fps</property>
                    <value>0</value>
                </equals>
            </condition>
        </input>
        <input>
            <expression>
                <rad2deg>
                    <atan2>
                        <property>/velocities/vBody-fps</property>
                        <property>/velocities/uBody-fps</property>
                    </atan2>
                </rad2deg>
            </expression>
        </input>
        <output>/instrumentation/pfd/fpv/v-deg</output>
    </filter>
    <filter>
        <type>gain</type>
        <gain>1</gain>
        <input>
            <condition>
                <equals>
                    <property>/velocities/wBody-fps</property>
                    <value>0</value>
                </equals>
            </condition>
        </input>
        <input>
            <expression>
                <rad2deg>
                    <atan2>
                        <property>/velocities/wBody-fps</property>
                        <property>/velocities/uBody-fps</property>
                    </atan2>
                </rad2deg>
            </expression>
        </input>
        <output>/instrumentation/pfd/fpv/w-deg</output>
    </filter>
</PropertyList>
