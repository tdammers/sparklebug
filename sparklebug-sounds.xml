<PropertyList>
    <fx>
        <!-- Engine 1 external sound -->
        <engine>
            <name>Engine 1 sound 1 external</name>
            <path>Sounds/whine.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[0]/n2</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <property>engines/engine[0]/n2</property>
                <offset>0</offset>
                <factor>0.005</factor>
            </volume>
            <pitch>
                <property>engines/engine[0]/n2</property>
                <offset>0.5</offset>
                <factor>0.007</factor>
            </pitch>
            <position>
                <x>0</x>
                <y>20</y>
                <z>0</z>
            </position>
        </engine>
        <engine>
            <name>Engine 1 reverse thrust</name>
            <path>Sounds/reverse-thrust.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>engines/engine[0]/n2</property>
                        <value>0</value>
                    </greater-than>
                    <greater-than>
                        <property>engines/engine[0]/reverser-pos-norm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <property>engines/engine[0]/n2</property>
                <offset>0</offset>
                <factor>0.01</factor>
            </volume>
            <position>
                <x>0</x>
                <y>20</y>
                <z>0</z>
            </position>
        </engine>
        
        <!-- Engine 2 external sound -->
        <engine>
            <name>Engine 2 sound 1 external</name>
            <path>Sounds/whine.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[1]/n2</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <property>engines/engine[1]/n2</property>
                <offset>0</offset>
                <factor>0.005</factor>
            </volume>
            <pitch>
                <property>engines/engine[1]/n2</property>
                <offset>0.5</offset>
                <factor>0.007</factor>
            </pitch>
            <position>
                <x>0</x>
                <y>-20</y>
                <z>0</z>
            </position>
        </engine>
        <engine>
            <name>Engine 2 reverse thrust</name>
            <path>Sounds/reverse-thrust.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>engines/engine[1]/n2</property>
                        <value>0</value>
                    </greater-than>
                    <greater-than>
                        <property>engines/engine[1]/reverser-pos-norm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <property>engines/engine[1]/n2</property>
                <offset>0</offset>
                <factor>0.01</factor>
            </volume>
            <position>
                <x>0</x>
                <y>-20</y>
                <z>0</z>
            </position>
        </engine>
        <!-- Engine 1 internal sound -->
        <engine>
            <name>Engine 1 sound internal</name>
            <path>Sounds/whine-inside.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <property>sim/current-view/internal</property>
                    <greater-than>
                        <property>engines/engine[0]/n2</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <property>engines/engine[0]/n2</property>
                <offset>0.5</offset>
                <factor>0.006</factor>
            </volume>
            <pitch>
                <property>engines/engine[0]/n2</property>
                <offset>0</offset>
                <factor>0.01</factor>
            </pitch>
            <position>
                <x>0</x>
                <y>20</y>
                <z>0</z>
            </position>
            <reference-dist>10</reference-dist>
            <max-dist>50</max-dist>
        </engine>
        <!-- Engine 2 internal sound -->
        <engine>
            <name>Engine 2 sound internal</name>
            <path>Sounds/whine-inside.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <property>sim/current-view/internal</property>
                    <greater-than>
                        <property>engines/engine[1]/n2</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <property>engines/engine[1]/n2</property>
                <offset>0</offset>
                <factor>0.05</factor>
                <max>2</max>
            </volume>
            <pitch>
                <property>engines/engine[1]/n2</property>
                <offset>0</offset>
                <factor>0.01</factor>
            </pitch>
            <position>
                <x>0</x>
                <y>-20</y>
                <z>0</z>
            </position>
            <reference-dist>10</reference-dist>
            <max-dist>50</max-dist>
        </engine>

        <!-- stardrive -->
        <engine>
            <name>Stardrive sound external</name>
            <path>Sounds/stardrive.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>surface-positions/stardrive/thrust</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <property>surface-positions/stardrive/thrust</property>
                <offset>0.1</offset>
                <factor>0.9</factor>
            </volume>
            <pitch>
                <property>surface-positions/stardrive/thrust</property>
                <offset>-0.1</offset>
                <factor>0.1</factor>
            </pitch>
            <reference-dist>20</reference-dist>
            <max-dist>100</max-dist>
            <position>
                <x>40</x>
                <y>0</y>
                <z>0</z>
            </position>
        </engine>

        <engine>
            <name>Stardrive reversed sound external</name>
            <path>Sounds/stardrive.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>surface-positions/stardrive/reverse-thrust</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                <property>surface-positions/stardrive/reverse-thrust</property>
                <offset>0.1</offset>
                <factor>0.9</factor>
            </volume>
            <pitch>
                <property>surface-positions/stardrive/reverse-thrust</property>
                <offset>-0.1</offset>
                <factor>0.1</factor>
            </pitch>
            <reference-dist>20</reference-dist>
            <max-dist>100</max-dist>
            <position>
                <x>-20</x>
                <y>0</y>
                <z>0</z>
            </position>
        </engine>
    </fx>
</PropertyList>
